@model IEnumerable<Projekat.Models.Transactions>

@{
    ViewBag.Title = "AllTransactions";
}

<h2>AllTransactions</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Cart)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ApplicationUserId)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <p>[Transaction] -------------------</p>
            @*@Html.DisplayFor(modelItem => item.Cart)*@
            @foreach (var zzz in @Json.Decode(item.Cart))
            {
                <p>[Item] -------------------</p>
                <span>Name: @zzz.Name</span>
                <span>Desc: @zzz.Desc</span>
                <span>Price: @zzz.Price</span>
                <br>
            }
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ApplicationUserId)
        </td>
        <td>
            @*@Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })*@
        </td>
    </tr>
}

</table>
